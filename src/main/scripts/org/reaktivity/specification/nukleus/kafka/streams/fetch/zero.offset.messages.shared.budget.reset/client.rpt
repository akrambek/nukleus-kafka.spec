property applicationConnect "nukleus://streams/kafka#0"
property applicationConnectWindow 8192

connect await ROUTED_CLIENT
        ${applicationConnect}
    option nukleus:window ${applicationConnectWindow}
    option nukleus:transmission "half-duplex"
    option nukleus:budgetId 5
    option nukleus:update "handshake"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .topicName("test")
                               .fetchOffset(0)
                               .build()}

connected

write notify CLIENT_ONE_CONNECTED

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .topicName("test")
                              .fetchOffset(0)
                              .build()}

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(1)
                             .build()}
read "Hello, world"

# WINDOW updates are turned off so that group budget doesn't go up
# But uncredited budget gets added to group budget after RESET on the second client
# that would be enough to push this message
read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(2)
                             .build()}
read "Hello, again"


connect await ROUTED_CLIENT
        ${applicationConnect}
    option nukleus:window ${applicationConnectWindow}
    option nukleus:transmission "half-duplex"
    option nukleus:budgetId 5
    option nukleus:update "handshake"

write nukleus:begin.ext ${kafka:beginEx()
                               .typeId(nukleus:id("kafka"))
                               .topicName("test")
                               .fetchOffset(0)
                               .build()}

connected

write notify CLIENT_TWO_CONNECTED

read nukleus:begin.ext ${kafka:beginEx()
                              .typeId(nukleus:id("kafka"))
                              .topicName("test")
                              .fetchOffset(0)
                              .build()}

read nukleus:data.ext ${kafka:matchDataEx()
                             .typeId(nukleus:id("kafka"))
                             .fetchOffset(1)
                             .build()}
read "Hello, world"

read abort
# should add uncredited budget to group budget upon RESET
