property newCacheServerRouteId ${nukleus:newClientRouteId("kafka#0", "kafka-cache#0")} # external

property nukleiUR020501C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlUR020501C ${nukleiUR020501C.control()}

connect await ROUTED_CACHE_SERVER
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlUR020501C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlUR020501C.nukleus)}

connected

write 0x00000002
write ${controlUR020501C.nextCorrelationId()}
write ${core:string("kafka")}
write ${newCacheServerRouteId}
write flush

read 0x40000002
read ${controlUR020501C.correlationId()}

close
closed
