property newNetworkRouteRef ${nuklei:newReferenceId()} # external scope

property newTimestamp ${kafka:timestamp()}

property networkAccept "nukleus://kafka/streams/source"
property networkAcceptWindow 8192

accept ${networkAccept}
  option nukleus:route  ${newNetworkRouteRef}
  option nukleus:window ${networkAcceptWindow}
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"

accepted
connected

read 0x41
read 0x01s
read 0x05s
read (int:requestId)
read -1s
read -1
read [0..4]
read 0x01
read [0..4]
read [0x00]
read 0x01
read 0x04s "test"
read 0x01
read 0x00
read 0x00L
read -1L
read [0..4]

write 0xa1
write ${requestId}
write 0
write 0x01
write 0x04s "test"
write 0x01
write 0
write 0x00s
write 0x02L
write -1L
write 0L
write -1
write 0x9a
write 0x00L
write 0x41
write 0x00
write [0x02]
write 0x4e8723aa
write 0x00s
write 0
write ${newTimestamp}
write ${newTimestamp}
write -1L
write -1s
write -1
write 0x02
write ${kafka:varint(21)}
write [0x00]
write ${kafka:varint(0)}
write ${kafka:varint(0)}
write ${kafka:varint(-1)}
write ${kafka:varint(12)}
write "Hello, world"
write 0x00
write ${kafka:varint(21)}
write [0x00]
write ${kafka:varint(0)}
write ${kafka:varint(1)}
write ${kafka:varint(-1)}
write ${kafka:varint(12)}
write "Hello, again"
write 0x00
