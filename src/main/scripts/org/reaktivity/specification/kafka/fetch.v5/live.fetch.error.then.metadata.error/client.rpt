property networkConnect "nukleus://streams/kafka#0"
property networkConnectWindow 8192

property newMetadataRequestId ${kafka:newRequestId()}
property newRequestId ${kafka:newRequestId()}
property maximumWaitTime 500
property maximumBytes 65535
property maximumBytesTest0 8192

# Metadata connection
connect await ROUTED_SERVER
        ${networkConnect}
  option nukleus:window ${networkConnectWindow} 
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"

write nukleus:begin.ext ${tcp:beginExtRemoteHost("broker1", 9093)}

connected

# Metadata request topic test1
write 22        # Size int32
write 3s     # ApiKey int16 (Metadata)
write 5s     # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # [TopicName] array length
  write 5s "test1"
write [0x00]    # allow_auto_topic_creation (boolean)

read 86         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # brokers array length
  read 1        # broker id
  read 7s "broker1"
  read 9093     # port int32
  read -1s      # rack string (null)
read 9s "cluster 1"
read 1          # controller broker id
read 1          # topic array length
  read 0s       # error code
  read 5s "test1"
  read [0x00]   # is_internal boolean
  read 1        # partition array length
    read 0s     # error code
    read 0      # partition
    read 1      # leader
    read 0      # replicas array (empty)
    read -1     # isr array (null)
    read 0      # offline replicas array (empty)
read notify METADATA_RECEIVED

write 63        # Size int32
write 32s       # ApiKey int16 (DescribeConfigs)
write 0s        # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # resources count
write [0x02]    # resource type (topic is 2, from org/apache/kafka/common/resource/ResourceType.java)
write 5s "test1" # topic name
write 2         # config names count
write 14s "cleanup.policy"  # config name
write 19s "delete.retention.ms"  # config name

read 89         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # resources count
read 0s         # error code
read -1s        # error message
read [0x02]     # resource type (topic)
read 5s "test1"  # topic name
read 2          # config entries count
read 14s "cleanup.policy"   # config name
read 6s "delete"            # config value
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean
read 19s "delete.retention.ms"
read 8s "86400000"
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean

# Metadata request topic test2
write 22        # Size int32
write 3s     # ApiKey int16 (Metadata)
write 5s     # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # [TopicName] array length
  write 5s "test2"
write [0x00]    # allow_auto_topic_creation (boolean)

read 86         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # brokers array length
  read 1        # broker id
  read 7s "broker1"
  read 9093     # port int32
  read -1s      # rack string (null)
read 9s "cluster 1"
read 1          # controller broker id
read 1          # topic array length
  read 0s       # error code
  read 5s "test2"
  read [0x00]   # is_internal boolean
  read 1        # partition array length
    read 0s     # error code
    read 0      # partition
    read 1      # leader
    read 0      # replicas array (empty)
    read -1     # isr array (null)
    read 0      # offline replicas array (empty)

write 63        # Size int32
write 32s       # ApiKey int16 (DescribeConfigs)
write 0s        # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # resources count
write [0x02]    # resource type (topic is 2, from org/apache/kafka/common/resource/ResourceType.java)
write 5s "test2" # topic name
write 2         # config names count
write 14s "cleanup.policy"  # config name
write 19s "delete.retention.ms"  # config name

read 89         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # resources count
read 0s         # error code
read -1s        # error message
read [0x02]     # resource type (topic)
read 5s "test2"  # topic name
read 2          # config entries count
read 14s "cleanup.policy"   # config name
read 6s "delete"            # config value
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean
read 19s "delete.retention.ms"
read 8s "86400000"
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean

# Metadata is refreshed for topic test1 after the not found fetch error 
# code is processed, reports an error
read await FETCH_RESPONSE_WITH_ERROR_READ

write 22        # Size int32
write 3s     # ApiKey int16 (Metadata)
write 5s     # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # [TopicName] array length
  write 5s "test1"
write [0x00]    # allow_auto_topic_creation (boolean)

read 64         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # brokers array length
  read 1        # broker id
  read 7s "broker1"
  read 9093     # port int32
  read -1s      # rack string (null)
read 9s "cluster 1"
read 1          # controller broker id
read 1          # topic array length
  read 5s       # error code LEADER_NOT_AVAILABLE
  read 5s "test1"
  read [0x00]   # is_internal boolean
  read -1       # partition array length

# Fetch stream
connect await METADATA_RECEIVED
        ${networkConnect}
  option nukleus:window ${networkConnectWindow} 
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"
write nukleus:begin.ext ${tcp:beginExtRemoteHost("broker1", 9093)}
connected

# Fetch request for topic test1
write 66
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 1
write ${maximumBytes}
write [0x00]
write 1
write 5s "test1"
write 1
write 0
write 0L
write -1L
write ${maximumBytesTest0}

read 141
read ${newRequestId}
read [0..4]
read 1
read 5s "test1"
read 1
read 0          # Partition
read 0s
read 1L         # high watermark
read -1L
read 0L         # log start offset
read -1         # aborted transactions
read 80         # length of record batch
read 0L         # first offset
read 68         # length     
read 0x00
read [0x02]
read 0x4e8723aa
read 0s
read 0          # last offset delta
read (long:timestamp)       # first timestamp
read ${timestamp}           # maximum timestamp
read -1L
read -1s
read -1
read 1          # number of records
read ${kafka:varint(18)}    # record length
read [0x00]     # attributes
read ${kafka:varint(0)}
read ${kafka:varint(0)}
read ${kafka:varint(-1)}    # key length
read ${kafka:varint(12)}   # value length
read "Hello, world"
read ${kafka:varint(0)}

# Fetch request for topics test1 and test2 gives error code for test1
write 101
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 1
write ${maximumBytes}
write [0x00]
write 2

write 5s "test1"
write 1
write 0         # Partition
write 1L        # offset
write -1L
write ${maximumBytesTest0}

write 5s "test2"
write 1
write 0         # Partition
write 0L
write -1L
write ${maximumBytesTest0}

read 110
read ${newRequestId}
read [0..4]
read 2          # Number of topic responses

read 5s "test1"
read 1          # Number of partition responses
read 0          # Partition
read 3s         # partition error code
read 0L         # high_watermark
read -1L        # last_stable_offset
read 0L         # log_start_offset
read -1         # aborted_transactions (null)
read 0          # length of record set

read 5s "test2"
read 1          # Number of partition responses
read 0          # Partition
read 0s         # partition error code
read 0L         # high_watermark
read -1L        # last_stable_offset
read 0L         # log_start_offset
read -1         # aborted_transactions (null)
read 0          # length of record set

read notify FETCH_RESPONSE_WITH_ERROR_READ

# Fetch request for topic test2 only gives no messages
write 66
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 1
write ${maximumBytes}
write [0x00]
write 1
write 5s "test2"
write 1
write 0         # Partition
write 0L
write -1L
write ${maximumBytesTest0}

read 61
read ${newRequestId}
read [0..4]
read 1          # Number of topic responses
read 5s "test2"
read 1          # Number of partition responses
read 0          # Partition
read 0s         # partition error code
read 0L         # high_watermark
read -1L        # last_stable_offset
read 0L         # log_start_offset
read -1         # aborted_transactions (null)
read 0          # length of record set

# Fetch request for topic test2 only gives no messages
write 66
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 1
write ${maximumBytes}
write [0x00]
write 1
write 5s "test2"
write 1
write 0         # Partition
write 0L
write -1L
write ${maximumBytesTest0}

read 61
read ${newRequestId}
read [0..4]
read 1          # Number of topic responses
read 5s "test2"
read 1          # Number of partition responses
read 0          # Partition
read 0s         # partition error code
read 0L         # high_watermark
read -1L        # last_stable_offset
read 0L         # log_start_offset
read -1         # aborted_transactions (null)
read 0          # length of record set

# Fetch request for topic test2 only gives no messages
write 66
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 1
write ${maximumBytes}
write [0x00]
write 1
write 5s "test2"
write 1
write 0         # Partition
write 0L
write -1L
write ${maximumBytesTest0}

read 61
read ${newRequestId}
read [0..4]
read 1          # Number of topic responses
read 5s "test2"
read 1          # Number of partition responses
read 0          # Partition
read 0s         # partition error code
read 0L         # high_watermark
read -1L        # last_stable_offset
read 0L         # log_start_offset
read -1         # aborted_transactions (null)
read 0          # length of record set
