property networkConnect "nukleus://streams/kafka#0"
property networkConnectWindow 8192

property newMetadataRequestId ${kafka:newRequestId()}
property newRequestId ${kafka:newRequestId()}
property maximumWaitTime 500
property maximumBytes 65535
property maximumBytesTest0 8192

# Metadata connection
connect await ROUTED_SERVER
        ${networkConnect}
  option nukleus:window ${networkConnectWindow} 
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"

write nukleus:begin.ext ${tcp:beginEx()
                             .typeId(nukleus:id("tcp"))
                             .localAddress("0.0.0.0")
                             .localPort(0)
                             .remoteHost("broker1")
                             .remotePort(9093)
                             .build()}


connected

write 21        # Size int32
write 0x03s     # ApiKey int16 (Metadata)
write 0x05s     # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # [TopicName] array length
  write 4s "test"
write [0x00]    # allow_auto_topic_creation (boolean)

read 85         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # brokers array length
  read 1        # broker id
  read 7s "broker1"
  read 9093     # port int32
  read -1s      # rack string (null)
read 9s "cluster 1"
read 1          # controller broker id
read 1          # topic array length
  read 0s       # error code
  read 4s "test"
  read [0x00]   # is_internal boolean
  read 1        # partition array length
    read 0s     # error code
    read 0      # partition
    read 1      # leader
    read 0      # replicas array (empty)
    read -1     # isr array (null)
    read 0      # offline replicas array (empty)

write 62        # Size int32
write 32s       # ApiKey int16 (DescribeConfigs)
write 0s        # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # resources count
write [0x02]    # resource type (topic is 2, from org/apache/kafka/common/resource/ResourceType.java)
write 4s "test" # topic name
write 2         # config names count
write 14s "cleanup.policy"  # config name
write 19s "delete.retention.ms"  # config name

read 88         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # resources count
read 0s         # error code
read -1s        # error message
read [0x02]     # resource type (topic)
read 4s "test"  # topic name
read 2          # config entries count
read 14s "cleanup.policy"   # config name
read 6s "delete"            # config value
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean
read 19s "delete.retention.ms"
read 8s "86400000"
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean

read notify RECEIVED_DESCRIBE_CONFIGS_RESPONSE_ONE

write 22        # Size int32
write 0x03s     # ApiKey int16 (Metadata)
write 0x05s     # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # [TopicName] array length
  write 5s "test2"
write [0x00]    # allow_auto_topic_creation (boolean)

read 86         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # brokers array length
  read 1        # broker id
  read 7s "broker1"
  read 9093     # port int32
  read -1s      # rack string (null)
read 9s "cluster 1"
read 1          # controller broker id
read 1          # topic array length
  read 0s       # error code
  read 5s "test2"
  read [0x00]   # is_internal boolean
  read 1        # partition array length
    read 0s     # error code
    read 0      # partition
    read 1      # leader
    read 0      # replicas array (empty)
    read -1     # isr array (null)
    read 0      # offline replicas array (empty)

write 63        # Size int32
write 32s       # ApiKey int16 (DescribeConfigs)
write 0s        # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # resources count
write [0x02]    # resource type (topic is 2, from org/apache/kafka/common/resource/ResourceType.java)
write 5s "test2"# topic name
write 2         # config names count
write 14s "cleanup.policy"  # config name
write 19s "delete.retention.ms"  # config name

read 89         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # resources count
read 0s         # error code
read -1s        # error message
read [0x02]     # resource type (topic)
read 5s "test2" # topic name
read 2          # config entries count
read 14s "cleanup.policy"   # config name
read 6s "delete"            # config value
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean
read 19s "delete.retention.ms"
read 8s "86400000"
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean

read notify RECEIVED_DESCRIBE_CONFIGS_RESPONSE_TWO

# Fetch stream
connect await RECEIVED_DESCRIBE_CONFIGS_RESPONSE_ONE
        ${networkConnect}
  option nukleus:window ${networkConnectWindow} 
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"

write nukleus:begin.ext ${tcp:beginEx()
                             .typeId(nukleus:id("tcp"))
                             .localAddress("0.0.0.0")
                             .localPort(0)
                             .remoteHost("broker1")
                             .remotePort(9093)
                             .build()}


connected

# list offsets request
write 41        # Size int32
write 2s        # ApiKey (ListOffsets)
write 2s        # ApiVersion 
write ${newMetadataRequestId} # CorrelationId 
write -1s       # ClientId string (null)
write -1        # replicaId
write [0x00]    # isolation level (0=READ_UNCOMMITTED)
write 1         # topic count 
write 4s "test" # topic name
write 1         # partition count
write 0         # partition
write -1L       # timestamp (high water mark offset)

read 44         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read 0          # throttle_time_ms int32
read 1          # topic count
read 4s "test"  # topic name 
read 1          # partition count
read 0          # partition
read 0s         # error code
read -1L        # timestamp
read 10L        # offset

# fetch request
write 65
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 0x01
write ${maximumBytes}
write [0x00]
write 1
write 4s "test"
write 1
write 0
write 10L       # offset
write -1L
write ${maximumBytesTest0}

read 60         # Size
read ${newRequestId}
read [0..4]
read 1
read 4s "test"
read 1
read 0          # Partition
read 0s
read 0L         # high_watermarkk
read -1L
read 0L         # log start offset
read -1         # aborted transactions (null)
read 0          # length of record set

write await RECEIVED_DESCRIBE_CONFIGS_RESPONSE_TWO

# fetch request
write 65
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 0x01
write ${maximumBytes}
write [0x00]
write 1
write 4s "test"
write 1
write 0
write 10L       # offset
write -1L
write ${maximumBytesTest0}

read 60         # Size
read ${newRequestId}
read [0..4]
read 1
read 4s "test"
read 1
read 0          # Partition
read 0s
read 0L         # high_watermarkk
read -1L
read 0L         # log start offset
read -1         # aborted transactions (null)
read 0          # length of record set

# list offsets request
write 42        # Size int32
write 2s        # ApiKey (ListOffsets)
write 2s        # ApiVersion 
write ${newMetadataRequestId} # CorrelationId 
write -1s       # ClientId string (null)
write -1        # replicaId
write [0x00]    # isolation level (0=READ_UNCOMMITTED)
write 1         # topic count 
write 5s "test2"# topic name
write 1         # partition count
write 0         # partition
write -1L       # timestamp (high water mark offset)

read 45         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read 0          # throttle_time_ms int32
read 1          # topic count
read 5s "test2" # topic name 
read 1          # partition count
read 0          # partition
read 0s         # error code
read -1L        # timestamp
read 15L        # offset

# fetch request
write 100
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 0x01
write ${maximumBytes}
write [0x00]
write 2
write 4s "test"
write 1
write 0
write 10L       # offset
write -1L
write ${maximumBytesTest0}
write 5s "test2"
write 1
write 0
write 15L       # offset
write -1L
write ${maximumBytesTest0}
